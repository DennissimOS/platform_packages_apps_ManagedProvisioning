<com.android.setupwizardlib.GlifLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setup_wizard_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            style="@style/SuwContentFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.android.setupwizardlib.view.RichTextView
                android:id="@+id/description"
                style="@style/SuwDescription.Glif"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="?attr/suwGlifHeaderGravity"/>
            <include
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/suw_glif_progress_bar_margin_vertical"
                android:layout_marginTop="@dimen/suw_glif_progress_bar_margin_vertical"
                layout="@layout/suw_progress_bar"/>
            <TextView
                style="@style/SuwItemSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/take_a_few_minutes"/>
            <ImageView
                android:id="@+id/animation"
                android:layout_width="412dp"
                android:layout_height="412dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ae_wp_setup_animation"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</com.android.setupwizardlib.GlifLayout>